<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alwayson2017.alwayson2017.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/todaypick_space"
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:text="오늘의 추천!을 만들 공간"
            android:background="#FFFFFF" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF" />

        <Button
            android:id="@+id/history_space"
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:text="어제 입은 옷은?을 만들 공간"
            android:background="#FFFFFF" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/camera_space"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:text="카메라 있을 공간"
                android:background="#FFFFFF" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#FFFFFF" />

            <Button
                android:id="@+id/store_space"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:text="장사하는 곳"
                android:background="#FFFFFF" />


        </LinearLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF" />

    </LinearLayout>




</android.support.constraint.ConstraintLayout>
